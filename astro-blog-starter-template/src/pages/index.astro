---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION, CONTACT_EMAIL, SECURITY_EMAIL } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<!-- Simple Hero Section -->
			<section class="hero">
				<div class="container">
					<h1>üõ°Ô∏è Hermetrix Technologies</h1>
					<p class="tagline">
						Secure Communications & Cybersecurity
					</p>
					<p>
						Professional cybersecurity solutions and consulting services for the Asia-Pacific region.
					</p>
					<div class="contact-info">
						<p>Email: <a href={`mailto:${CONTACT_EMAIL}`}>{CONTACT_EMAIL}</a></p>
						<p>Security: <a href={`mailto:${SECURITY_EMAIL}`}>{SECURITY_EMAIL}</a></p>
					</div>
				</div>
			</section>
		</main>
		<Footer />

		<style>
			body {
				margin: 0;
				min-height: 100vh;
				display: flex;
				flex-direction: column;
				font-family: system-ui, sans-serif;
				line-height: 1.6;
			}

			main {
				flex: 1;
			}

			.hero {
				padding: 4rem 1rem;
				text-align: center;
				background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
				min-height: 60vh;
				display: flex;
				align-items: center;
				justify-content: center;
			}

			.container {
				max-width: 800px;
				margin: 0 auto;
			}

			.hero h1 {
				font-size: 2.5rem;
				margin-bottom: 1rem;
				color: #1a365d;
			}

			.tagline {
				font-size: 1.25rem;
				color: #4a5568;
				margin-bottom: 2rem;
				font-weight: 300;
			}

			.contact-info {
				margin-top: 2rem;
				padding: 1.5rem;
				background: white;
				border-radius: 0.5rem;
				display: inline-block;
				box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
			}

			.contact-info a {
				color: #1a365d;
				text-decoration: none;
				font-weight: 500;
			}

			.contact-info a:hover {
				text-decoration: underline;
			}
		</style>
	</body>
</html>
